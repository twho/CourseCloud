<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/chat_list_item_imageView1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/chat_list_item_tv_name"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Large Textdddddddddddddddddddd"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/chat_list_item_tv_time"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="Small Text3333333"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/chat_list_item_tv_content"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Medium Text33333333333333333333"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <FrameLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp" >

                <ImageView
                    android:id="@+id/qrcode_activity_btn1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/head" />

                <TextView
                    android:id="@+id/bubble_user_name"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffff" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>